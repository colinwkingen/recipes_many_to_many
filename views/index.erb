<h2>Welcome to recipe box.</h1>

<div class="row container">
  <div class="col-xs-4">
    <h3>Find by ingredient:</h3>
    <ul class="list-group">
      <% @ingredients.each do |ingredient| %>
        <li class="list-group-item"><a href="ingredients/<%= ingredient.id%>"> <%= ingredient.name() %> </a>
          <form class="" action="/ingredients/<%= ingredient.id() %>" method="post">
            <input name= "_method" type="hidden" value="delete">
            <button class = "front-delete btn btn-danger btn-sm" type="submit">Delete</button>
          </form>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="col-xs-4">
    <h3>Find by category:</h3>
    <ul class="list-group">
      <% @categories.each do |category| %>
        <li class="list-group-item"><a href="categories/<%= category.id%>"> <%= category.name() %> </a>
          <form class="" action="/categories/<%= category.id() %>" method="post">
            <input name= "_method" type="hidden" value="delete">
            <button class = "front-delete btn btn-danger btn-sm" type="submit">Delete</button>
          </form>
        </li>
      <% end %>
    </ul>

  </div>
  <div class="col-xs-4">
    <h3>Find by name:</h3>
    <ul class="list-group">
      <% @recipes.each do |recipe| %>
        <li class="list-group-item"><a href="recipes/<%= recipe.id%>"> <%= recipe.name() %></a>
          <% if recipe.rating > 0 %>
            <% counter = 0 %>
            <% rating_tags = "<span class='glyphicon glyphicon-star pull-right'></span>" %>
            <% until counter == recipe.rating do %>
              <% counter += 1 %>
              <%= rating_tags %>
            <% end %>
          <% end %>
        </li>
      <% end %>
    </ul>
    <!-- </div> -->


</div>
<div class="row container">
  <div class="col-xs-12">
    <div class="pull-right">
      <h3>Add a new recipe:</h3>
      <form action="/recipes" method="post">
          <label for="name">Recipe Name:</label>
          <input type="text" name="name" id="name">
          <button class = "btn btn-primary" type="submit" name="button">Add Recipe</button>
      </form>
    <div>
  </div>

</div>
