<h1><%= @recipe.name() %></h1>
<a href="/recipes/<%=@recipe.id()%>/edit" class="btn btn-warning active btn-sm" role="button">Edit Recipe</a>
<hr>
<% if @recipe.instruction %>
  <div class="well">
    <p>

        <%= @recipe.instruction %>

    </p>
  </div>
<% end %>
<div class="row">
  <div class="col-xs-4">
    <form class="" action="/recipes/<%= @recipe.id() %>/ingredients" method="post">
      <div class="form-group">
        <label for="name">New ingredient:</label>
        <input id="name" type="text" name="name">
      </div>
      <button type="submit" class="btn btn-primary">Add ingredient</button>
    </form>
    <hr>
    <form class="" action="/recipes/<%= @recipe.id() %>/categories" method="post">
      <div class="form-group">
        <label for="category">New category name:</label>
        <input id="category" type="text" name="category">
      </div>
      <button type="submit" class="btn btn-primary">Add Category</button>
    </form>
    <hr>
    <form class="" action="/recipes/<%= @recipe.id() %>" method="post">
      <input name= "_method" type="hidden" value="delete">
      <button class = "btn btn-danger" type="submit">Delete Recipe</button>
    </form>
    <hr>
    <h4>Rate This Recipe</h4>
    <form>
      <div class="radio">
        <label>
          <input type="radio" name="optionsRadios" id="optionsRadios1" value="option1" checked> Delicious
        </label>
      </div>
      <div class="radio">
        <label>
          <input type="radio" name="optionsRadios" id="optionsRadios2" value="option1" checked> Really Good
        </label>
      </div>
      <div class="radio">
        <label>
          <input type="radio" name="optionsRadios" id="optionsRadios3" value="option1" checked> Pretty Good
        </label>
      </div>
      <div class="radio">
        <label>
          <input type="radio" name="optionsRadios" id="optionsRadios4" value="option2">
          Kinda Okay
        </label>
      </div>
      <div class="radio">
        <label>
          <input type="radio" name="optionsRadios" id="optionsRadios5" value="option2">
          Total Crap
        </label>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <hr>
    <a href="/" class="btn btn-default active" role="button">Home</a>
  </div>
  <div class="col-xs-4">
    <h4>Ingredients:</h4>
    <ul class="list-group">
      <% @recipe.ingredients.each do |ingredient| %>
        <li class="list-group-item"> <%= ingredient.name() %>
          <form class="" action="/recipes/<%= @recipe.id() %>/ingredients/<%= ingredient.id() %>/remove" method="post">
            <button class = "glyphicon glyphicon-remove" type="submit"></button>
          </form>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="col-xs-4">
    <h4>Categories this recipe belongs in:</h4>
    <ul class="list-group">
      <% @recipe.categories.each do |category| %>
        <li class="list-group-item"> <%= category.name() %>
          <form class="" action="/recipes/<%= @recipe.id() %>/categories/<%= category.id() %>/remove" method="post">
            <button class = "glyphicon glyphicon-remove" type="submit"></button>
          </form>
        </li>
      <% end %>
    </ul>
  </div>
</div>
